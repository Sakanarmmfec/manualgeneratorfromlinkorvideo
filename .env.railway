# Railway Free Tier Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Memory optimization for Railway free tier (512MB)
NODE_OPTIONS=--max-old-space-size=400

# Free tier optimizations
FREE_TIER=true
LOG_LEVEL=info
DEBUG_MODE=false
NEXT_TELEMETRY_DISABLED=1

# Rate limiting for free tier
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_REQUESTS_PER_HOUR=100

# Features
ALLOW_USER_API_KEYS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Security - Set these as secrets in Railway dashboard
# MFEC_LLM_BASE_URL=https://gpt.mfec.co.th/litellm
# MFEC_LLM_API_KEY=your_api_key_here
# MFEC_LLM_CHAT_MODEL=gpt-4o
# MFEC_LLM_EMBEDDING_MODEL=text-embedding-3-large
# ENCRYPTION_KEY=your_32_character_encryption_key_here
# NEXT_PUBLIC_APP_URL=https://your-app.railway.app